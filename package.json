{
	"name": "simple-lms",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "wrangler types && mv worker-configuration.d.ts src/ && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "dotenv -c -- drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply --local DB",
		"postinstall": "wrangler types && mv worker-configuration.d.ts src/",
		"db:migrate-production": "dotenv -c -- drizzle-kit migrate",
		"deploy": "bun run build && wrangler deploy"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.0",
		"@inlang/paraglide-js": "^2.4.0",
		"@internationalized/date": "^3.10.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.16",
		"@types/bun": "^1.3.1",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/md5": "^2.3.6",
		"@types/node": "^24.9.2",
		"@types/uuid": "^11.0.0",
		"bits-ui": "^2.14.2",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.6",
		"eslint": "^9.39.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.15",
		"svelte": "^5.43.2",
		"svelte-check": "^4.3.3",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.16",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"wrangler": "^4.45.3"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^7.1.0",
		"@fortawesome/free-solid-svg-icons": "^7.1.0",
		"@fortawesome/svelte-fontawesome": "^0.2.4",
		"@lucide/svelte": "^0.544.0",
		"@rehype-pretty/transformers": "^0.13.2",
		"bcryptjs": "^3.0.2",
		"cuid": "^3.0.0",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^10.0.0",
		"drizzle-orm": "^0.44.7",
		"jsonwebtoken": "^9.0.2",
		"jszip": "^3.10.1",
		"md5": "^2.3.0",
		"rehype-katex": "^7.0.1",
		"rehype-pretty-code": "^0.14.1",
		"rehype-raw": "^7.0.0",
		"rehype-stringify": "^10.0.1",
		"remark-gfm": "^4.0.1",
		"remark-math": "^6.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"svelte-motion": "^0.12.2",
		"svelte-themes": "^2.0.10",
		"svelte-turnstile": "^0.11.0",
		"unified": "^11.0.5",
		"vite": "^7.1.12",
		"zod": "^4.1.12"
	}
}
